#centro
	box-sizing border-box
	font-size 0
	.contenido
		max-width anchura_total !important
		margin 0 auto

#principal
	display inline-block
	vertical-align top
	width 75%
	box-sizing border-box
	font-size 16px

#sidebar
	width 23%
	margin-left 2%
	font-size 16px
	display inline-block
	vertical-align top
	box-sizing border-box
	background-color white
	padding 1.5em
	aside
		background-color white
		box-sizing border-box
		border-bottom 1px solid whitesmoke
		margin-bottom
		&+aside
			margin-top 1em	
		>h1
		>h2 
			font-size 1.2em
			line-height 1.2em
			margin-top 0
			text-transform uppercase
		h2
		h3 
			font-size 1.2em
			line-height 1.2em
			margin-top 0
			text-transform uppercase
			margin-bottom 1em
		p
			font-size .9em


.mas-cursos
.mas-tutoriales
	a
		margin-bottom 25px
		display inline-block
		vertical-align top
		width 30%
		margin-right 3%
		&:nth-child(3n)
			margin-right 0
		img
			display block
			max-width 100%

.ultimos-articulos
	h3
		margin-bottom 1em
	article
		margin-bottom 2em
		h4
			text-transform uppercase
			font-size .8em
			line-height 1.4em
			&:after
				content '' 
				display block 
				clear both
		img
			width 45%
			max-width 45%
			float left
			margin-right .5em
			&:hover
				box-shadow none
				box-shadow 4px 4px 1em #d3d3d3

