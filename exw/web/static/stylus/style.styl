@import "normalize.styl"
@import "bootstrap/mixins.styl"

//Url static para cuando estoy en local
url = "/static/"
//Para cuando está en S3
//url = "https://mis-pruebas.s3.amazonaws.com/"

//Tamaño
anchura_total = 1243px

@font-face {
  font-family: 'icomoon';
  src:url(url+'fonts/icomoon.eot');
  src:url(url+'fonts/icomoon.eot?#iefix') format('embedded-opentype'),
    url(url+'fonts/icomoon.woff') format('woff'),
    url(url+'fonts/icomoon.ttf') format('truetype'),
    url(url+'fonts/icomoon.svg#icomoon') format('svg');
  font-weight: normal;
  font-style: normal;
}

//Fuentes
FBase   = 'Open Sans', sans-serif
FTitulos = 'Dosis', sans-serif

*
  font-family FBase

//Colores del tema
Negro   = #000000
CNegro  = rgb(51, 51, 51)
VerdeO  = #006666
VerdeN  = #167F77
VerdeC  = #33CC99
Oliva       = #CCCC33
AzulClaro   = #0099cc
AzulOscuro  = #2D78A2

//Colores de los elementos
CBase        = CNegro
CTitulos     = Negro
CEnlaces     = AzulClaro

//Color para la selección
::-moz-selection
  background AzulClaro
  color white
  text-shadow none

::selection
  background AzulClaro
  text-shadow none
  color white

//Tamaño del texto
TBase           = 17px
baseLH          = TBase/2
TGrande         = TBase * 1.35
TPequeno        = TBase * 0.85
TMini           = TBase * 0.75
baseLineHeight  = TBase/2

//Fuente, tamaño y color de texto por defecto
body
  font-size TBase
  line-height TBase*1.4
  color CBase
  //Estilos para encabezados
  h1, h2, h3, h4, h5, h6
    margin (baseLineHeight / 2) 0
    font-family FTitulos
    font-weight normal
    color CTitulos
    text-rendering optimizelegibility
  h1
    font-size TBase * 2.75
  h2
    font-size TBase * 1.8
  h3
    font-size TBase * 1.45
    line-height TBase*1.8
  h4
    font-size TBase * 1.25
  p
  li
    color CBase
    font-size TBase
    font-family FBase
    font-weight 200
  a
  a:visited
    color CEnlaces
    text-decoration none
    &:hover
      text-decoration none
      color AzulClaro
  .ocultar
    opacity 0
  ul
    margin-left 0
  .clearfix
    clear both

